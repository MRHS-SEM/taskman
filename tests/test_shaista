

def fibonacci(limit):
    sequence = [0, 1]
    while sequence[-1] + sequence[-2] < limit:
        sequence.append(sequence[-1] + sequence[-2])
    return sequence

def test_fibonacci():
    assert fibonacci(10) == [0, 1, 1, 2, 3, 5, 8]
    assert fibonacci(20) == [0, 1, 1, 2, 3, 5, 8, 13]
    assert fibonacci(5) == [0, 1, 1, 2, 3]
    assert fibonacci(0) == [0, 1]
